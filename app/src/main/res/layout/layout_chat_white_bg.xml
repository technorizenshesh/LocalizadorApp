<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/linear_layout_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/chat_white_bg"
            android:elevation="2dp"
            android:gravity="right"
            android:maxWidth="195dp"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/image_arrow_right"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/tv_message"
            android:background="@drawable/ic_arrow_left"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:backgroundTint="#e1ffc7"
            android:rotation="270"

            />


        <RelativeLayout
            android:id="@+id/relative_img_message"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/chat_white_bg"
            android:elevation="2dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:padding="1dp" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:paddingRight="8dp"
        android:textColor="@color/black"
        android:text="04:05 pm"
        android:textSize="9dp" />
</LinearLayout>
