<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            >

            <RelativeLayout
                android:id="@+id/RRback"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:src="@drawable/cross_icon"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    >

                </ImageView>

            </RelativeLayout>

            <TextView
                android:id="@+id/txtName"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:text="@string/my_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:gravity="center"
                        android:text="@string/share_this_invite_code_with_your_friends_and_family"
                        android:padding="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:id="@+id/RRContinue"
                        android:background="@drawable/btn_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/txtCode"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="center"
                            android:text="@string/cwg_tcb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </RelativeLayout>

                    <TextView
                        android:text="This code is valid until September 30, 2021"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:text="Tip: you can share this code in any way you want: text it, email it, write it down or say it."
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/RRShare"
                        android:background="@drawable/btn_bg"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="center"
                            android:text="Share Code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:src="@drawable/from_contacts"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        >

                    </ImageView>

                    <TextView
                        android:textColor="@color/black"
                        android:text="@string/from_contacts"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:src="@drawable/from_contacts"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        >

                    </ImageView>

                    <TextView
                        android:textColor="@color/black"
                        android:text="@string/find_neraby"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:src="@drawable/from_contacts"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        >

                    </ImageView>

                    <TextView
                        android:textColor="@color/black"
                        android:text="@string/by_shaking_phone"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:src="@drawable/from_contacts"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        >

                    </ImageView>

                    <TextView
                        android:textColor="@color/black"
                        android:text="@string/by_other_options"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>
