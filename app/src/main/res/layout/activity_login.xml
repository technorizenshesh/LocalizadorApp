<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_SPLASH"
       >


        <ImageView
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@mipmap/logo"
            />

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:orientation="vertical"
                android:background="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/bg_SPLASH"
                    android:textSize="@dimen/_14sdp"
                    android:text="One last step, Enter your phone number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/btn_new">

                    <TextView
                        android:id="@+id/txtCountry"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+91"
                        android:textSize="@dimen/_16sdp">

                    </TextView>

                    <View
                        android:id="@+id/br"
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/txtCountry"
                        android:background="@color/bg_SPLASH">

                    </View>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/br"
                        android:background="@null"
                        android:hint="Phone number"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_14sdp">

                    </EditText>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/RRContinue"
                    android:background="@drawable/btn_bg"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:gravity="center"
                        android:text="Continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
