<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            >

            <RelativeLayout
                android:layout_alignParentLeft="true"
                android:id="@+id/RRback"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:src="@drawable/cross_icon"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    >
                </ImageView>

            </RelativeLayout>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/txtName"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:text="@string/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            </TextView>

        </RelativeLayout>
        <com.google.android.gms.ads.AdView
            android:layout_below="@+id/RRtoolbar"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-6669202856871108/4069679933">
        </com.google.android.gms.ads.AdView>
        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:padding="@dimen/_20sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:id="@+id/RRHome"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    >

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/place1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:id="@+id/cardCheckOut"
                        app:cardBackgroundColor="@color/bg_SPLASH"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_40sdp"
                        >

                        <TextView
                            android:textStyle="bold"
                            android:padding="@dimen/_7sdp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Home"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            />


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RRWork"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    >

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/work"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/bg_SPLASH"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_40sdp"
                        >

                        <TextView
                            android:textStyle="bold"
                            android:padding="@dimen/_7sdp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Work"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            />


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RRSchool"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    >

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/schol"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/bg_SPLASH"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_40sdp"
                        >

                        <TextView
                            android:textStyle="bold"
                            android:padding="@dimen/_7sdp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add School"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            />


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RRCustom"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    >

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/custom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/bg_SPLASH"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_40sdp"
                        >

                        <TextView
                            android:padding="@dimen/_7sdp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Custom Place"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            />


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>
