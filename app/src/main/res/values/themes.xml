<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="myFullscreenAlertDialogStyle"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@color/white</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>
    <style name="PriceButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textColor">@color/price_button_grey</item>
        <item name="android:background">@drawable/price_button_background</item>
    </style>


</resources>